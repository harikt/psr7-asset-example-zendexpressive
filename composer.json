{
    "description": "Showcase for integration of psr7-asset!",
    "type": "project",
    "homepage": "https://github.com/harikt/psr7-asset-example-zendexpressive",
    "license": "MIT",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/harikt/psr7-asset-example"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-stdlib": "^2.7 || ^3.0",
        "zendframework/zend-expressive-fastroute": "^1.0",
        "aura/di": "^3.0",
        "zendframework/zend-expressive-twigrenderer": "^1.0",
        "hkt/psr7-asset-example": "1.*",
        "http-interop/http-factory-diactoros": "^0.2.0",
        "zendframework/zend-expressive-aurarouter": "1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^1.1 || ^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    },
    "minimum-stability": "dev"
}
